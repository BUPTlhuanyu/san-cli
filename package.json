{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@commitlint/cli": "^8.3.4",
        "@commitlint/core": "^8.3.4",
        "@ksky521/cz-emoji": "^1.2.1",
        "commitizen": "^4.0.3",
        "commitlint-config-gitmoji": "^1.0.1",
        "fecs": "^1.6.4",
        "husky": "^4.0.0",
        "jest": "^24.8.0",
        "lerna": "^3.19.0",
        "lint-staged": "^9.2.5",
        "memfs": "^3.0.1",
        "stylelint": "^12.0.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "scripts": {
        "lint": "lint-staged",
        "test": "node scripts/test.js",
        "doc": "node packages/san-cli/index.js docit ./docs --config ./docs/san.config.js",
        "build:doc": "node packages/san-cli/index.js docit ./docs --output --mode production --config ./docs/san.config.js"
    },
    "commitlint": {
        "extends": [
            "gitmoji"
        ],
        "rules": {
            "header-max-length": [
                2,
                "always",
                120
            ],
            "subject-case": [0, "always", "sentence-case"]
        }
    },
    "config": {
        "commitizen": {
            "path": "@ksky521/cz-emoji"
        },
        "@ksky521/cz-emoji": {
            "types": [
                {
                    "emoji": "üåü",
                    "code": ":sparkles:",
                    "description": "Introducing new features.",
                    "name": "feat"
                },
                {
                    "emoji": "üêõ",
                    "code": ":bug:",
                    "description": "Fixing a bug.",
                    "name": "fix"
                },
                {
                    "emoji": "üöë",
                    "code": ":ambulance:",
                    "description": "Critical hotfix.",
                    "name": "quickfix"
                },
                {
                    "emoji": "‚úÖ",
                    "code": ":white_check_mark:",
                    "description": "Adding tests.",
                    "name": "test"
                },
                {
                    "emoji": "üí¨",
                    "code": ":speech_balloon:",
                    "description": "Updating text and literals.",
                    "name": "chore"
                },
                {
                    "emoji": "üì¶",
                    "code": ":package:",
                    "description": "Releasing / Version tags.",
                    "name": "release"
                },
                {
                    "emoji": "üìù",
                    "code": ":pencil:",
                    "description": "Writing docs.",
                    "name": "docs"
                },
                {
                    "emoji": "üö®",
                    "code": ":rotating_light:",
