{
    "name": "root",
    "private": true,
    "devDependencies": {
        "fecs": "^1.6.4",
        "husky": "^1.3.0",
        "lerna": "^3.13.2",
        "lint-staged": "^9.2.5",
        "commitlint": "^8.1.0",
        "stylelint": "^9.10.1"
    },
    "scripts": {
        "lint": "lint-staged"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.js": [
            "fecs"
        ]
    },
    "commitlint": {
        "rules": {
            "body-leading-blank": [
                1,
                "always"
            ],
            "footer-leading-blank": [
                1,
                "always"
            ],
            "header-max-length": [
                2,
                "always",
                72
            ],
            "scope-case": [
                2,
                "always",
                "lower-case"
            ],
            "subject-case": [
                2,
                "never",
                [
                    "sentence-case",
                    "start-case",
                    "pascal-case",
                    "upper-case"
                ]
            ],
            "subject-empty": [
                2,
                "never"
            ],
            "subject-full-stop": [
                2,
                "never",
                "."
            ],
            "type-case": [
                2,
                "always",
                "lower-case"
            ],
            "type-empty": [
                2,
                "never"
            ],
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test"
                ]
            ]
        }
    }
}
