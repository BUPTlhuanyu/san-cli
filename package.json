{
    "name": "root",
    "private": true,
    "devDependencies": {
        "fecs": "^1.6.2",
        "husky": "^1.3.0",
        "lerna": "^3.13.2",
        "lint-staged": "^8.1.5",
        "stylelint": "^9.10.1"
    },
    "scripts": {
        "lint": "lint-staged"
    },
    "husky": {
        "hooks": {
            "pre-commit": "node ./packages/hulk-lint/node_modules/lint-staged/index.js",
            "commit-msg": "node ./packages/hulk-lint/node_modules/commitlint/node_modules/.bin/commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "node ./packages/hulk-lint/bin/hulk-lint"
            ],
            "*.{html,htm}": [
                "node ./packages/hulk-lint/node_modules/fecs/bin/fecs check --reporter=baidu --rule"
            ],
            "*.css": [
                "node ./packages/hulk-lint/node_modules/fecs/bin/fecs format",
                "git add"
            ]
        },
        "ignore": [
            "**/dist/**",
            "**/docs/**",
            "**/output/**",
            "**/*.min.js"
        ]
    },
    "commitlint": {
        "rules": {
            "body-leading-blank": [
                1,
                "always"
            ],
            "footer-leading-blank": [
                1,
                "always"
            ],
            "header-max-length": [
                2,
                "always",
                72
            ],
            "scope-case": [
                2,
                "always",
                "lower-case"
            ],
            "subject-case": [
                2,
                "never",
                [
                    "sentence-case",
                    "start-case",
                    "pascal-case",
                    "upper-case"
                ]
            ],
            "subject-empty": [
                2,
                "never"
            ],
            "subject-full-stop": [
                2,
                "never",
                "."
            ],
            "type-case": [
                2,
                "always",
                "lower-case"
            ],
            "type-empty": [
                2,
                "never"
            ],
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test"
                ]
            ]
        }
    },
    "dependencies": {}
}
