#!/usr/bin/env node

/**
 * @file install git hooks
 * @author luzhe <luzhe01@baidu.com>
 */

const program = require('commander');
const installer = require('../lib/installer');

// get parameters
program
    .option('-p, --path [path]', 'Path to be install')
    .parse(process.argv);

let dir = program.path || process.cwd();
installer(dir);
